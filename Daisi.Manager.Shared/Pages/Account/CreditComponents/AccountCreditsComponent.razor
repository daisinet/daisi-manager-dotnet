@using Daisi.Manager.Shared.Services

<h3>Credits</h3>

@if (IsLoading)
{
    <p>Loading credit information...</p>
}
else if (ErrorMessage is not null)
{
    <div class="alert alert-danger mt-3">@ErrorMessage</div>
}
else
{
    <div class="row mt-3">
        <div class="col-md-6 col-lg-3 mb-3">
            <div class="card bg-dark-subtle">
                <div class="card-body text-center">
                    <h6 class="card-subtitle text-muted">Balance</h6>
                    <h2 class="card-title mt-2">@Balance.ToString("N0")</h2>
                </div>
            </div>
        </div>
        <div class="col-md-6 col-lg-3 mb-3">
            <div class="card bg-dark-subtle">
                <div class="card-body text-center">
                    <h6 class="card-subtitle text-muted">Total Earned</h6>
                    <h2 class="card-title mt-2">@TotalEarned.ToString("N0")</h2>
                </div>
            </div>
        </div>
        <div class="col-md-6 col-lg-3 mb-3">
            <div class="card bg-dark-subtle">
                <div class="card-body text-center">
                    <h6 class="card-subtitle text-muted">Total Spent</h6>
                    <h2 class="card-title mt-2">@TotalSpent.ToString("N0")</h2>
                </div>
            </div>
        </div>
        <div class="col-md-6 col-lg-3 mb-3">
            <div class="card bg-dark-subtle">
                <div class="card-body text-center">
                    <h6 class="card-subtitle text-muted">Total Purchased</h6>
                    <h2 class="card-title mt-2">@TotalPurchased.ToString("N0")</h2>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-3">
        <div class="col-md-6 mb-3">
            <div class="card bg-dark-subtle">
                <div class="card-body">
                    <h5>Multipliers</h5>
                    <div class="mt-2">
                        <label class="fw-bold">Token Earn Multiplier</label>
                        <div class="form-control-plaintext">@TokenEarnMultiplier.ToString("F1")x</div>
                    </div>
                    <div class="mt-2">
                        <label class="fw-bold">Uptime Earn Multiplier</label>
                        <div class="form-control-plaintext">@UptimeEarnMultiplier.ToString("F1")x</div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6 mb-3">
            <div class="card bg-dark-subtle">
                <div class="card-body">
                    <h5>Purchase Credits</h5>
                    <p class="text-muted mt-2">
                        You will soon be able to purchase credits, but for now earn them and support the AI Rebellion by
                        <a href="/hosts/setup">Setting Up a Host</a> on your device.
                    </p>
                </div>
            </div>
        </div>
    </div>

    <h4 class="mt-4">Transaction History</h4>
    @if (Transactions.Count == 0)
    {
        <p class="text-muted">No transactions yet.</p>
    }
    else
    {
        <div class="table-responsive">
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Date</th>
                        <th>Type</th>
                        <th>Amount</th>
                        <th>Balance</th>
                        <th>Description</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var tx in Transactions)
                    {
                        <tr>
                            <td>@tx.DateCreated.ToDateTime().ToString("yyyy-MM-dd HH:mm")</td>
                            <td>@tx.Type</td>
                            <td class="@(tx.Amount >= 0 ? "text-success" : "text-danger")">
                                @(tx.Amount >= 0 ? "+" : "")@tx.Amount.ToString("N0")
                            </td>
                            <td>@tx.Balance.ToString("N0")</td>
                            <td>@tx.Description</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        <Daisi.SDK.Razor.Components.Pager.PagingComponent PageIndexChanged="OnTxPageChanged" TotalCount="_txTotalCount" Paging="_txPaging" />
    }
}

@code {
    bool IsLoading { get; set; } = true;
    bool IsAdmin { get; set; }
    string? ErrorMessage { get; set; }

    long Balance { get; set; }
    long TotalEarned { get; set; }
    long TotalSpent { get; set; }
    long TotalPurchased { get; set; }
    double TokenEarnMultiplier { get; set; } = 1.0;
    double UptimeEarnMultiplier { get; set; } = 1.0;

    List<CreditTransactionInfo> Transactions { get; set; } = new();
    int _txTotalCount;
    PagingInfo _txPaging = new() { PageSize = 10, PageIndex = 0 };

    [Inject] public AuthService AuthService { get; set; } = default!;
    [Inject] public CreditClientFactory CreditClientFactory { get; set; } = default!;
    [Inject] public IToastService ToastService { get; set; } = default!;

    string _accountId = "";

    protected override async Task OnInitializedAsync()
    {
        try
        {
            var role = await AuthService.GetUserRoleAsync();
            IsAdmin = role >= UserRoles.Admin;
            _accountId = await AuthService.GetAccountIdAsync() ?? string.Empty;

            var client = CreditClientFactory.Create();

            var creditAccountResponse = await client.GetCreditAccountAsync(new GetCreditAccountRequest { AccountId = _accountId });
            var creditAccount = creditAccountResponse.Account;
            if (creditAccount is not null)
            {
                Balance = creditAccount.Balance;
                TotalEarned = creditAccount.TotalEarned;
                TotalSpent = creditAccount.TotalSpent;
                TotalPurchased = creditAccount.TotalPurchased;
                TokenEarnMultiplier = creditAccount.TokenEarnMultiplier;
                UptimeEarnMultiplier = creditAccount.UptimeEarnMultiplier;
            }

            await LoadTransactionsAsync();
        }
        catch (Exception ex)
        {
            ErrorMessage = $"Error loading credit information: {ex.Message}";
        }
        finally
        {
            IsLoading = false;
        }
    }

    async Task LoadTransactionsAsync()
    {
        var client = CreditClientFactory.Create();
        var txResponse = await client.GetCreditTransactionsAsync(new GetCreditTransactionsRequest
        {
            AccountId = _accountId,
            PageSize = _txPaging.PageSize,
            PageIndex = _txPaging.PageIndex
        });
        Transactions = txResponse.Transactions.ToList();
        _txTotalCount = txResponse.TotalCount;
    }

    async Task OnTxPageChanged(int pageIndex)
    {
        _txPaging.PageIndex = pageIndex;
        await LoadTransactionsAsync();
    }

}
