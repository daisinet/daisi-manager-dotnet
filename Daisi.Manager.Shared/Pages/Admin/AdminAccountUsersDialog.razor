@using Daisi.Manager.Shared.Services

<MudDialog>
    <TitleContent>
        <div>
            <i class="fa-duotone fa-users me-2"></i> Users for <strong>@AccountName</strong>
        </div>
    </TitleContent>
    <DialogContent>
        @if (_loading)
        {
            <p class="text-muted">Loading users...</p>
        }
        else if (_users.Count == 0)
        {
            <div class="alert alert-info mb-0">
                <i class="fa-solid fa-circle-info me-2"></i>
                No users found for this account.
            </div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-sm mb-0">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Role</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var user in _users)
                        {
                            <tr>
                                <td>@user.Name</td>
                                <td>@user.EmailAddress</td>
                                <td>
                                    <span class="badge @GetRoleBadgeClass(user.Role)">@user.Role</span>
                                </td>
                                <td>
                                    @if (user.Status == UserStatus.Active)
                                    {
                                        <i title="Active" class="fa-duotone fa-dot text-success fa-2x p-0"></i>
                                    }
                                    else
                                    {
                                        <i title="Archived" class="fa-duotone fa-dot text-danger fa-2x p-0"></i>
                                    }
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            <small class="text-muted mt-2 d-block">Showing @_users.Count of @_totalCount users</small>
        }
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Close">Close</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] IMudDialogInstance MudDialog { get; set; } = default!;

    [Parameter] public string AccountId { get; set; } = string.Empty;
    [Parameter] public string AccountName { get; set; } = string.Empty;

    [Inject] AccountClientFactory AccountClientFactory { get; set; } = default!;

    private bool _loading = true;
    private List<User> _users = [];
    private int _totalCount;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            var client = AccountClientFactory.Create();
            var response = await client.AdminGetAccountUsersAsync(new AdminGetAccountUsersRequest
            {
                AccountId = AccountId,
                Paging = new PagingInfo { PageIndex = 0, PageSize = 50 }
            });
            _users = response.Users.ToList();
            _totalCount = response.TotalCount;
        }
        catch
        {
            _users = [];
        }
        _loading = false;
    }

    string GetRoleBadgeClass(UserRoles role) => role switch
    {
        UserRoles.Admin => "bg-danger",
        UserRoles.Owner => "bg-warning text-dark",
        UserRoles.Manager => "bg-info text-dark",
        _ => "bg-secondary"
    };

    private void Close() => MudDialog.Close();
}
