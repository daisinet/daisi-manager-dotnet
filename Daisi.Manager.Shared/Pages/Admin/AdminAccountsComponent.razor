@using Daisi.Manager.Shared.Services

<h3><i class="fa-duotone fa-users-gear me-2"></i> Accounts</h3>

<div class="row mt-3">
    <div class="col">
        <SearchBox Placeholder="Search accounts by name or ID" OnSearch="OnSearch"></SearchBox>
    </div>
</div>

<div class="mt-4">
    @if (_loading)
    {
        <p>Loading accounts...</p>
    }
    else if (!_accounts.Any())
    {
        <div class="alert alert-warning">No accounts found.</div>
    }
    else
    {
        <table class="table table-dark table-hover">
            <thead>
                <tr>
                    <th>Account Name</th>
                    <th>Max File Size</th>
                    <th>Max Storage</th>
                    <th>Max Files</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var account in _accounts)
                {
                    <tr>
                        <td>@account.Name</td>
                        <td>@account.MaxFileSizeMB MB</td>
                        <td>@account.MaxTotalStorageGB GB</td>
                        <td>@account.MaxFileCount.ToString("N0")</td>
                        <td>
                            <button class="btn btn-outline-primary btn-sm" @onclick="() => EditStorageLimits(account)">
                                <i class="fa-duotone fa-pen-to-square me-1"></i> Edit Limits
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>

@if (_editingAccount is not null)
{
    <div class="modal d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog">
            <div class="modal-content bg-dark">
                <div class="modal-header border-secondary">
                    <h5 class="modal-title"><i class="fa-duotone fa-hard-drive me-2"></i> Storage Limits â€” @_editingAccount.Name</h5>
                    <button type="button" class="btn-close btn-close-white" @onclick="CancelEdit"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Max File Size (MB)</label>
                        <input type="number" class="form-control" @bind="_editMaxFileSizeMB" min="1" max="10240" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Max Total Storage (GB)</label>
                        <input type="number" class="form-control" @bind="_editMaxTotalStorageGB" min="1" max="1000" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Max File Count</label>
                        <input type="number" class="form-control" @bind="_editMaxFileCount" min="1" max="100000" />
                    </div>
                </div>
                <div class="modal-footer border-secondary">
                    <button type="button" class="btn btn-secondary" @onclick="CancelEdit">Cancel</button>
                    <button type="button" class="btn btn-success" @onclick="SaveStorageLimits">
                        <i class="fa-duotone fa-save me-1"></i> Save Limits
                    </button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    [Inject] IToastService ToastService { get; set; } = default!;

    bool _loading = true;
    string _searchTerm = "";
    List<AccountInfo> _accounts = [];

    // Edit dialog state
    AccountInfo? _editingAccount;
    long _editMaxFileSizeMB;
    long _editMaxTotalStorageGB;
    int _editMaxFileCount;

    protected override async Task OnInitializedAsync()
    {
        // In production, loads from an admin API
        _accounts =
        [
            new() { Id = "acct-1", Name = "Acme Corp", MaxFileSizeMB = 100, MaxTotalStorageGB = 10, MaxFileCount = 10000 },
            new() { Id = "acct-2", Name = "Demo Account", MaxFileSizeMB = 50, MaxTotalStorageGB = 5, MaxFileCount = 5000 },
        ];
        _loading = false;
    }

    async Task OnSearch(string value)
    {
        _searchTerm = value;
        // In production, re-fetches filtered accounts from API
    }

    void EditStorageLimits(AccountInfo account)
    {
        _editingAccount = account;
        _editMaxFileSizeMB = account.MaxFileSizeMB;
        _editMaxTotalStorageGB = account.MaxTotalStorageGB;
        _editMaxFileCount = account.MaxFileCount;
    }

    void CancelEdit()
    {
        _editingAccount = null;
    }

    void SaveStorageLimits()
    {
        if (_editingAccount is not null)
        {
            // In production, calls admin API to update storage limits
            _editingAccount.MaxFileSizeMB = _editMaxFileSizeMB;
            _editingAccount.MaxTotalStorageGB = _editMaxTotalStorageGB;
            _editingAccount.MaxFileCount = _editMaxFileCount;
            ToastService.ShowSuccess($"Storage limits updated for {_editingAccount.Name}.");
            _editingAccount = null;
        }
    }

    public class AccountInfo
    {
        public string Id { get; set; } = "";
        public string Name { get; set; } = "";
        public long MaxFileSizeMB { get; set; }
        public long MaxTotalStorageGB { get; set; }
        public int MaxFileCount { get; set; }
    }
}
