    private async Task OnItemTypeChanged(ChangeEventArgs e)
    {
        _itemType = e.Value?.ToString() ?? "Skill";
        if (_itemType == "Plugin" && _availableItems.Count == 0)
        {
            await LoadAvailableItemsAsync();
        }
    }

    private async Task LoadAvailableItemsAsync()
    {
        _loadingAvailableItems = true;
        try
        {
            var accountId = await AuthService.GetAccountIdAsync() ?? string.Empty;
            var client = MarketplaceClientFactory.Create();
            var response = await client.GetProviderItemsAsync(new GetProviderItemsRequest { AccountId = accountId });
            // Show non-Plugin items (Skills, Bot Tools, Host Tools) — exclude the current item being edited
            _availableItems = response.Items
                .Where(i => i.ItemType != MarketplaceItemType.Plugin)
                .Where(i => !IsEdit || i.Id != Id)
                .ToList();
        }
        catch (Exception ex)
        {
            ToastService.ShowError($"Error loading available items: {ex.Message}");
        }
        _loadingAvailableItems = false;
    }

    private void OnBundledItemSelected(ChangeEventArgs e)
    {
        var selectedId = e.Value?.ToString();
        if (string.IsNullOrEmpty(selectedId)) return;

        var item = _availableItems.FirstOrDefault(a => a.Id == selectedId);
        if (item is not null && !_bundledItems.Any(b => b.Id == selectedId))
        {
            _bundledItems.Add(new BundledItemEntry { Id = item.Id, Name = item.Name });
        }
    }

    private void RemoveBundledItem(BundledItemEntry item)
    {
        _bundledItems.Remove(item);
    }

