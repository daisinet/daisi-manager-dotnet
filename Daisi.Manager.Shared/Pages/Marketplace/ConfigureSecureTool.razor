@page "/marketplace/configure/{ItemId}/{InstallId}"
@using Daisi.Manager.Shared.Services
@inject HttpClient Http
@inject IJSRuntime JS
@inject NavigationManager NavigationManager

<div class="mt-3">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/marketplace">Marketplace</a></li>
            <li class="breadcrumb-item active" aria-current="page">Configure Secure Tool</li>
        </ol>
    </nav>

    @if (_loading)
    {
        <div class="text-center py-4">
            <div class="spinner-border text-primary" role="status"></div>
        </div>
    }
    else if (_item is null)
    {
        <div class="alert alert-danger">
            <i class="fa-duotone fa-triangle-exclamation me-1"></i> Item not found or is not a secure execution tool.
        </div>
    }
    else
    {
        <h3>Configure: @_item.Name</h3>

        <div class="alert alert-info mt-3">
            <i class="fa-duotone fa-shield-halved me-2"></i>
            <strong>Security Notice:</strong> Your credentials are sent directly to the provider (<code>@_item.SecureEndpointUrl</code>) and are <strong>never stored on Daisinet servers</strong>.
        </div>

        @if (_item.SetupParameters.Count == 0)
        {
            <div class="alert alert-warning">
                This tool does not require any setup parameters.
            </div>
        }
        else
        {
            <div class="card bg-dark-subtle border-secondary mt-3">
                <div class="card-body">
                    @foreach (var param in _item.SetupParameters)
                    {
                        <div class="mb-3">
                            <label class="form-label fw-bold">
                                @param.Name
                                @if (param.IsRequired) { <span class="text-danger">*</span> }
                            </label>
                            @if (!string.IsNullOrEmpty(param.Description))
                            {
                                <div class="text-muted small mb-1">@param.Description</div>
                            }

                            @if (param.Type == "oauth")
                            {
                                var status = GetOAuthStatus(param.Name);
                                <div class="d-flex align-items-center gap-2 mt-1">
                                    @if (status == OAuthStatus.Checking)
                                    {
                                        <span class="spinner-border spinner-border-sm text-info" role="status"></span>
                                        <span class="text-muted">Checking connection...</span>
                                    }
                                    else if (status == OAuthStatus.Connected)
                                    {
                                        <span class="badge bg-success py-2 px-3">
                                            <i class="fa-duotone fa-check-circle me-1"></i> Connected to @(string.IsNullOrEmpty(param.ServiceLabel) ? "service" : param.ServiceLabel)
                                        </span>
                                        <button class="btn btn-sm btn-outline-secondary" @onclick="() => StartOAuthFlowAsync(param)" disabled="@(_oauthPolling.ContainsKey(param.Name))">
                                            <i class="fa-duotone fa-rotate me-1"></i> Reconnect
                                        </button>
                                    }
                                    else if (status == OAuthStatus.Error)
                                    {
                                        <span class="badge bg-warning text-dark py-2 px-3">
                                            <i class="fa-duotone fa-triangle-exclamation me-1"></i> Could not check status
                                        </span>
                                        <button class="btn btn-sm btn-outline-info" @onclick="() => StartOAuthFlowAsync(param)" disabled="@(_oauthPolling.ContainsKey(param.Name))">
                                            <i class="fa-duotone fa-link me-1"></i> Connect to @(string.IsNullOrEmpty(param.ServiceLabel) ? "service" : param.ServiceLabel)
                                        </button>
                                    }
                                    else
                                    {
                                        @if (_oauthPolling.ContainsKey(param.Name))
                                        {
                                            <span class="spinner-border spinner-border-sm text-info" role="status"></span>
                                            <span class="text-muted">Waiting for authorization...</span>
                                        }
                                        else
                                        {
                                            <button class="btn btn-info" @onclick="() => StartOAuthFlowAsync(param)">
                                                <i class="fa-duotone fa-link me-1"></i> Connect to @(string.IsNullOrEmpty(param.ServiceLabel) ? "service" : param.ServiceLabel)
                                            </button>
                                        }
                                    }
                                </div>
                            }
                            else if (param.Type is "password" or "apikey")
                            {
                                <input type="password" class="form-control" @bind="_setupValues[param.Name]" placeholder="@param.Name" />
                            }
                            else if (param.Type == "json")
                            {
                                <textarea class="form-control font-monospace" rows="4" @bind="_setupValues[param.Name]" placeholder="{ }"></textarea>
                            }
                            else
                            {
                                <input type="text" class="form-control" @bind="_setupValues[param.Name]" placeholder="@param.Name" />
                            }
                        </div>
                    }
                </div>
            </div>

            @if (HasNonOAuthParams)
            {
                <div class="mt-3">
                    <button class="btn btn-primary" @onclick="SaveConfigurationAsync" disabled="@_saving">
                        @if (_saving) { <span class="spinner-border spinner-border-sm me-1"></span> }
                        <i class="fa-duotone fa-floppy-disk me-1"></i> Save Configuration
                    </button>
                    <a href="/marketplace" class="btn btn-outline-secondary ms-2">Cancel</a>
                </div>
            }
            else
            {
                <div class="mt-3">
                    <a href="/marketplace" class="btn btn-outline-secondary">Back to Marketplace</a>
                </div>
            }
        }

        @if (!string.IsNullOrEmpty(_successMessage))
        {
            <div class="alert alert-success mt-3">
                <i class="fa-duotone fa-check-circle me-1"></i> @_successMessage
            </div>
        }
        @if (!string.IsNullOrEmpty(_errorMessage))
        {
            <div class="alert alert-danger mt-3">
                <i class="fa-duotone fa-triangle-exclamation me-1"></i> @_errorMessage
            </div>
        }
    }
</div>

@code {
    [Parameter] public string ItemId { get; set; } = string.Empty;
    [Parameter] public string InstallId { get; set; } = string.Empty;

    [Inject] public MarketplaceClientFactory MarketplaceClientFactory { get; set; } = default!;
    [Inject] public IToastService ToastService { get; set; } = default!;

    private bool _loading = true;
    private bool _saving;
    private MarketplaceItemInfo? _item;
    private Dictionary<string, string> _setupValues = new();
    private Dictionary<string, OAuthStatus> _oauthStatuses = new();
    private Dictionary<string, bool> _oauthPolling = new();
    private string? _successMessage;
    private string? _errorMessage;

    private enum OAuthStatus { Unknown, Checking, Connected, NotConnected, Error }

    private bool HasNonOAuthParams =>
        _item?.SetupParameters.Any(p => p.Type != "oauth") == true;

    private OAuthStatus GetOAuthStatus(string paramName) =>
        _oauthStatuses.TryGetValue(paramName, out var status) ? status : OAuthStatus.Unknown;

    protected override async Task OnParametersSetAsync()
    {
        _loading = true;
        try
        {
            var client = MarketplaceClientFactory.Create();
            var response = await client.GetMarketplaceItemAsync(new GetMarketplaceItemRequest { Id = ItemId });
            var item = response.Item;

            if (item is not null && item.IsSecureExecution)
            {
                _item = item;
                _setupValues = item.SetupParameters
                    .Where(p => p.Type != "oauth")
                    .ToDictionary(p => p.Name, _ => string.Empty);

                // Check OAuth status for each OAuth parameter
                foreach (var param in item.SetupParameters.Where(p => p.Type == "oauth"))
                {
                    _ = CheckOAuthStatusAsync(param);
                }
            }
        }
        catch (Exception ex)
        {
            ToastService.ShowError($"Error loading item: {ex.Message}");
        }
        _loading = false;
    }

    private async Task CheckOAuthStatusAsync(SecureToolSetupParameter param)
    {
        _oauthStatuses[param.Name] = OAuthStatus.Checking;
        StateHasChanged();

        try
        {
            if (_item is null || string.IsNullOrEmpty(_item.SecureEndpointUrl)) return;

            var requestBody = new { installId = InstallId, service = param.Name };
            var httpResponse = await Http.PostAsJsonAsync(
                $"{_item.SecureEndpointUrl.TrimEnd('/')}/auth/status", requestBody);

            if (httpResponse.IsSuccessStatusCode)
            {
                var result = await httpResponse.Content.ReadFromJsonAsync<AuthStatusProviderResponse>();
                _oauthStatuses[param.Name] = result?.Connected == true
                    ? OAuthStatus.Connected
                    : OAuthStatus.NotConnected;
            }
            else
            {
                _oauthStatuses[param.Name] = OAuthStatus.Error;
            }
        }
        catch
        {
            _oauthStatuses[param.Name] = OAuthStatus.Error;
        }

        StateHasChanged();
    }

    private async Task StartOAuthFlowAsync(SecureToolSetupParameter param)
    {
        if (_item is null || string.IsNullOrEmpty(param.AuthUrl)) return;

        var callbackUrl = NavigationManager.ToAbsoluteUri("/marketplace/oauth-callback").ToString();
        var authUrl = $"{param.AuthUrl.TrimEnd('/')}?installId={Uri.EscapeDataString(InstallId)}" +
                      $"&returnUrl={Uri.EscapeDataString(callbackUrl)}" +
                      $"&service={Uri.EscapeDataString(param.Name)}";

        // Open popup window
        await JS.InvokeVoidAsync("open", authUrl, "_blank",
            "width=600,height=700,scrollbars=yes,resizable=yes");

        // Start polling for completion
        _oauthPolling[param.Name] = true;
        StateHasChanged();

        _ = PollOAuthCompletionAsync(param);
    }

    private async Task PollOAuthCompletionAsync(SecureToolSetupParameter param)
    {
        var maxAttempts = 100; // 3 seconds * 100 = 5 minutes
        for (var i = 0; i < maxAttempts; i++)
        {
            await Task.Delay(3000);
            await CheckOAuthStatusAsync(param);

            if (_oauthStatuses.TryGetValue(param.Name, out var status) && status == OAuthStatus.Connected)
            {
                _oauthPolling.Remove(param.Name);
                ToastService.ShowSuccess($"Connected to {(string.IsNullOrEmpty(param.ServiceLabel) ? "service" : param.ServiceLabel)}!");
                StateHasChanged();
                return;
            }
        }

        // Timed out
        _oauthPolling.Remove(param.Name);
        ToastService.ShowWarning("OAuth connection timed out. Please try again.");
        StateHasChanged();
    }

    private async Task SaveConfigurationAsync()
    {
        _saving = true;
        _successMessage = null;
        _errorMessage = null;

        try
        {
            if (_item is null || string.IsNullOrEmpty(_item.SecureEndpointUrl))
            {
                _errorMessage = "Tool endpoint URL is not configured.";
                _saving = false;
                return;
            }

            var requestBody = new
            {
                installId = InstallId,
                toolId = _item.SecureToolDefinition?.ToolId ?? string.Empty,
                setupValues = _setupValues
            };

            var httpResponse = await Http.PostAsJsonAsync(
                $"{_item.SecureEndpointUrl.TrimEnd('/')}/configure", requestBody);

            if (httpResponse.IsSuccessStatusCode)
            {
                var result = await httpResponse.Content.ReadFromJsonAsync<ConfigureProviderResponse>();
                if (result?.Success == true)
                {
                    _successMessage = "Configuration saved successfully. Your credentials have been sent to the provider.";
                    ToastService.ShowSuccess("Configuration saved!");
                }
                else
                {
                    _errorMessage = result?.Error ?? "Configuration failed.";
                    ToastService.ShowError($"Configuration failed: {_errorMessage}");
                }
            }
            else
            {
                _errorMessage = $"Provider returned HTTP {(int)httpResponse.StatusCode}";
                ToastService.ShowError(_errorMessage);
            }
        }
        catch (Exception ex)
        {
            _errorMessage = ex.Message;
            ToastService.ShowError($"Error: {ex.Message}");
        }

        _saving = false;
    }

    private record ConfigureProviderResponse(bool Success, string? Error);
    private record AuthStatusProviderResponse(bool Connected, string? ServiceName, string? UserLabel);
}
